<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:gravity="right"
            android:text="Mile Travelled"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="118dp"
            android:text="Rate/Mile"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Expanse Amt"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="5dp"
            android:text="Personal Auto"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/Rates_meals"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:textSize="15dp"
            android:background="@drawable/rate_mile_field"
            android:maxLength="8" />

        <EditText
            android:id="@+id/mile_travels"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/Rates_meals"
            android:layout_alignBottom="@+id/Rates_meals"
            android:layout_alignLeft="@+id/textView4"
            android:layout_marginLeft="5dp"
            android:background="@drawable/inputbox_small"
            android:ems="10"
            android:gravity="right|center"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:textSize="15dp" 
            android:maxLength="4"/>

        <EditText
            android:id="@+id/exp_amt"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/mile_travels"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/mile_travels"
            android:background="@drawable/rate_mile_field"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</RelativeLayout>